{
  "version": 2,
  "name": "bot-whatsapp-conecta2",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "crm-dashboard/dist",
  "installCommand": "npm install && cd crm-dashboard && npm install",
  "functions": {
    "src/index.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/src/index"
    },
    {
      "source": "/webhook/(.*)",
      "destination": "/api/src/index"
    },
    {
      "source": "/crm/(.*)",
      "destination": "/api/src/index"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept, Authorization"
        }
      ]
    }
  ]
}
