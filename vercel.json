{
  "version": 2,
  "name": "bot-whatsapp-conecta2",
  "builds": [
    {
      "src": "api/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "crm-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/index.ts"
    },
    {
      "src": "/webhook/(.*)",
      "dest": "/api/src/index.ts"
    },
    {
      "src": "/crm/(.*)",
      "dest": "/api/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/crm-dashboard/dist/$1"
    }
  ]
}
