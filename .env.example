# Variables de entorno para el Bot WhatsApp
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
WEBHOOK_URL=https://your-domain.vercel.app

# Base de datos
DATABASE_URL=mongodb://your_mongodb_connection_string_here
DB_HOST=your_db_host
DB_PORT=your_db_port
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Configuración del servidor
PORT=3000
NODE_ENV=production
API_URL=https://your-domain.vercel.app

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# WispHub API (para clientes)
WISPHUB_API_URL=your_wisphub_api_url
WISPHUB_API_KEY=your_wisphub_api_key

# JWT y Seguridad
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# CRM
CRM_API_URL=https://your-domain.vercel.app/api
CRM_JWT_SECRET=your_crm_jwt_secret

# WebSocket
WS_URL=wss://your-domain.vercel.app

# Logs y Monitoreo
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_if_using

# Variables específicas del CRM Dashboard
VITE_API_URL=https://your-domain.vercel.app
VITE_WS_URL=wss://your-domain.vercel.app
